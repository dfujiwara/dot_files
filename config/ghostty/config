theme = Desert 

# creating new splits
keybind = ctrl+a>j=new_split:down
keybind = ctrl+a>k=new_split:up
keybind = ctrl+a>h=new_split:left
keybind = ctrl+a>l=new_split:right
keybind = ctrl+a>r=reload_config

# managing existing splits
keybind = ctrl+a>z=toggle_split_zoom
keybind = ctrl+a>up=goto_split:up
keybind = ctrl+a>down=goto_split:down
keybind = ctrl+a>right=goto_split:right
keybind = ctrl+a>left=goto_split:left
keybind = ctrl+a>n=goto_split:next
keybind = ctrl+a>p=goto_split:previous
keybind = ctrl+a>w=close_surface
